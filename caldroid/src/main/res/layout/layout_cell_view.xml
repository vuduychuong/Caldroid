<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="cellView"
            type="com.roomorama.caldroid.CellView"
            />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutHeight="@{ cellView.heightView }"
        android:background="@color/caldroid_white"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/caldroid_black"
            android:text="@{ cellView.textDate }"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/caldroid_white"
            android:textSize="@dimen/sp_9"
            android:text="ダミーダミ"
            android:background="@color/caldroid_holo_blue_dark"
            tools:background="@color/caldroid_holo_blue_dark"
            tools:text="ダミーダミ"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/caldroid_white"
            android:textSize="@dimen/sp_9"
            android:text="ダミーダミ"
            android:background="@color/caldroid_holo_blue_dark"
            tools:background="@color/caldroid_holo_blue_dark"
            tools:text="ダミーダミ"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/caldroid_white"
            android:textSize="@dimen/sp_9"
            android:text="ダミーダミ"
            android:background="@color/caldroid_holo_blue_dark"
            tools:background="@color/caldroid_holo_blue_dark"
            tools:text="ダミーダミ"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/caldroid_white"
            android:textSize="@dimen/sp_9"
            android:text="ダミーダミ"
            android:background="@color/caldroid_holo_blue_dark"
            tools:background="@color/caldroid_holo_blue_dark"
            tools:text="ダミーダミ"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/caldroid_white"
            android:textSize="@dimen/sp_9"
            android:text="ダミーダミ"
            android:background="@color/caldroid_holo_blue_dark"
            tools:background="@color/caldroid_holo_blue_dark"
            tools:text="ダミーダミ"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:paddingStart="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_4"
            android:textColor="@color/caldroid_black"
            android:textSize="@dimen/sp_9"
            android:visibility="invisible"
            android:text="+1"
            android:background="@color/caldroid_gray"
            />
    </LinearLayout>
</layout>